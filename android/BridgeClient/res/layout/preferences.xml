<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_server_category">
        <EditTextPreference
            android:key="pref_server"
            android:title="@string/pref_server"
            android:summary="@string/pref_server_summary"
            android:defaultValue="http://192.168.0.198" />
        <EditTextPerference
            android:key="pref_port"
            android:title="@string/pref_port"
            android:defaultValue="8080"
            android:numeric="integer" />
    </PreferenceCategory>
</PreferenceScreen>
